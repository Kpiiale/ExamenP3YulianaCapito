<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ExamenP3YulianaCapito.ViewModels"
             x:Class="ExamenP3YulianaCapito.MainPage">
    <ContentPage.BindingContext>
        <vm:MainPageViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">
        <Entry Placeholder="Ingrese un término de búsqueda"
               Text="{Binding TerminoBusqueda}" />
        <Button Text="Buscar"
                Command="{Binding CommandBuscarAeropuertos}" />
        <Label Text="{Binding Resultado}" 
               FontAttributes="Bold" 
               TextColor="White" />
        <ListView ItemsSource="{Binding Aeropuertos}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" 
                              Detail="{Binding City}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
